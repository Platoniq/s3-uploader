%html
  %head
    %meta(charset="utf-8")
    %title S3 uploader 
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %link(rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
    %link(rel="stylesheet" type="text/css" href="/site.css")
    %script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js")
    %script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    %script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery-throttle-debounce/1.1/jquery.ba-throttle-debounce.js")
    %script(src="/script.js")
  %body(data-prefix="#{@prefix}")
    .container
      %h1 
        #{current_bucket}:
        %small Upload new file
      .row
        .col-sm-10
          %form#upload(enctype="multipart/form-data" action="/upload" method ="post")
            .form-group.files
              %input.form-control(name="file" type="file")
              %input{type: "hidden", name: "prefix", value: @prefix}
            - if flash[:error]
              %div.alert.alert-danger.alert-dismissible 
                %button.close(type="button" data-dismiss="alert")
                  .span
                    &times;
                #{flash[:error]}
            %button.btn.btn-primary.btn-lg(type="submit") 
              - if @prefix.empty?
                Upload to /
              - else
                Upload to #{@prefix}
        .col-sm-2#versioning
          %form
            %label Bucket:
            %select#select-bucket.form-control
              - S3_BUCKET_NAMES.each do |bucket|
                %option{selected: current_bucket == "#{bucket}"} #{bucket}
          Versioning:
    .container
      %h1 Existing files
      %ol.breadcrumb
        %li
          %a(href="/") Root
        - pre = "d"
        - @prefix.split("/").each do |p|
          - pre = "#{pre}/#{p}"
          %li
            %a{href: "/#{pre}/"} #{p}
      .row
        .col-sm-7
        .col-sm-5
          .input-group
            %span.input-group-addon Filter Prefix
            %input#prefix.form-control(type="text")
      %table.table.table-hover
        %thead
          %tr
            %th.col-s-6 Filename
            %th.col-s-2 Date
            %th.col-s-2 Size
            %th.col-s-2 Action
        %tbody#files
      #nomore No more results.
      %div#loader
        %img.img-responsive(src="/loader.gif")
        Loading #{current_bucket}
    = haml :modal